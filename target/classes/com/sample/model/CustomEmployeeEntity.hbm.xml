<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- TABLE PER SUBLCASS WITH DISCRIMINATOR COLUMN, USAGE OF ENTITY-NAME ON SUBCLASS -->
<hibernate-mapping schema="test">
	<subclass name="com.sample.model.Employee" extends="com.sample.model.Person" entity-name="CustomEmployeeEntity">
		<join table="EMPLOYEE">
			<key column="EMPLOYEE_ID" />
			<property name="dept" column="DEPT" type="string" />
			<many-to-one name="address" class="com.sample.model.Address"
				cascade="save-update,delete" column="ADDRESS_ID" />
		</join>
	</subclass>
</hibernate-mapping>
