<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- TABLE PER SUBCLASS -->
<hibernate-mapping schema="test" package="com.sample.model">
	<!--  Table per subclass, subclass has primary key association to super class -->
	<joined-subclass name="Customer" extends="com.sample.model.Person" table="CUSTOMER">
		<key column="ID" /> <!--  key column from person -->
		<one-to-one name="address" class="com.sample.model.Address" cascade="save-update,delete" />
	</joined-subclass>
</hibernate-mapping>